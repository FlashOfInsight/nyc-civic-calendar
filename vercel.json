{
  "buildCommand": "npm install",
  "outputDirectory": "public",
  "functions": {
    "api/*.js": {
      "memory": 256,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 6 * * 0"
    }
  ]
}
